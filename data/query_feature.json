{
	"month_average" : {
		"field": [
			"AVG(cost)"
		],
		"condition": [
			{
				"variable" : "date",
				"condition" : "EQUAL",
				"value" : "#THIS_MONTH"
			}
		]
	},
	"week_average" : {
		"field": [
			"AVG(cost)"
		],
		"condition": [
			{
				"variable" : "date",
				"condition" : "EQUAL",
				"value" : "#THIS_WEEK"
			}
		]
	},
	"year_average" : {
		"field": [
			"AVG(cost)"
		],
		"condition": [
			{
				"variable" : "date",
				"condition" : "EQUAL",
				"value" : "#THIS_YEAR"
			}
		]
	},
}